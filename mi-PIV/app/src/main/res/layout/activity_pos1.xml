<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pos1_Activity">

    <ScrollView
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="60dp"
        tools:ignore="MissingConstraints">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/pos1TextView0"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
        android:id="@+id/pos1TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_below="@id/pos1TextView0"/>

<!--    <ImageView-->
<!--        android:id="@+id/pos1ImageView1"-->
<!--        android:layout_width="fill_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/boundary_layer_image_1"-->
<!--        android:layout_below="@id/pos1TextView1"-->
<!--        tools:ignore="MissingConstraints" />-->

        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/pos1ImageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_boundarylayer"
            android:layout_below="@id/pos1TextView1"/>

        <TextView
        android:id="@+id/pos1TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pos1ImageView1"/>

        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/pos1ImageView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/boundary_eq1"
            android:layout_below="@id/pos1TextView2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/pos1TextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pos1ImageView2"/>

        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/pos1ImageView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/boundary_eq2"
            android:layout_below="@id/pos1TextView3"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/pos1TextView4"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pos1ImageView3"/>

        <TextView
            android:id="@+id/pos1TextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pos1TextView4"/>

        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/pos1ImageView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/boundary_layer_image_2"
            android:layout_below="@id/pos1TextView5"
            tools:ignore="MissingConstraints" />


    </RelativeLayout>


    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation2"
        app:itemBackground="@android:color/white"
        />


</RelativeLayout>